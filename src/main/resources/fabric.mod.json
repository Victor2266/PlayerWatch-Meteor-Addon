{
  "schemaVersion": 1,
  "id": "player-watch",
  "version": "1.0.1",
  "name": "Player Watch",
  "description": "Automatically disconnects when a player from a specific list is online and tries to reconnect later.",
  "authors": [
    "YourUsername"
  ],
  "contact": {
    "sources": "https://github.com/YourUsername/player-watch"
  },
  "icon": "assets/player-watch/icon.png",
  "environment": "client",
  "entrypoints": {
    "meteor": [
      "com.example.addon.PlayerWatchAddon"
    ]
  },
  "mixins": [
    "player-watch.mixins.json"
  ],
  "custom": {
    "meteor-client:color": "225,25,25"
  },
  "depends": {
    "java": ">=21",
    "minecraft": ["${mc_version}", "1.21.8", "1.21.7", "1.21.6"],
    "meteor-client": "*"
  }
}
